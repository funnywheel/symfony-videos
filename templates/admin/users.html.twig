{% extends 'admin/base.html.twig' %}

{% block main %}

    <h2>Users</h2>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>

            {% for user in 1..10 %}
                <tr>
                    <td>{{ user }}</td>
                    <td>Adam</td>
                    <td>Smith</td>
                    <td>adam@smith.com</td>
                    <td><a href="#" onclick="return confirm('Are you sure?');"><i class="fas fa-trash"></i></a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
